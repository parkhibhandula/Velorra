<%- include('./partials/header') %>
  <style>
    body {
      font-family: 'Georgia', serif;
      margin: 0;
      padding: 0;
      background-color: #fafafa;
    }
    .container {
      max-width: 800px;
      margin: 50px auto;
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    h1 {
      text-align: center;
      font-size: 32px;
      margin-bottom: 20px;
    }
    .profile-details {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .detail {
      display: flex;
      justify-content: space-between;
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
    }
    .label {
      font-weight: bold;
      color: #555;
    }
    .value {
      color: #777;
    }
    .actions {
      margin-top: 30px;
      text-align: center;
    }
    .btn {
      background-color: #333;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .btn:hover {
      background-color: #555;
    }
  </style>
    <div class="container">
        <h1>My Profile</h1>
    
        <div class="profile-details">
          <div class="detail">
            <div class="label">Name:</div>
            <div class="value"><%= user.fullname%></div>
          </div>
          <div class="detail">
            <div class="label">Email:</div>
            <div class="value"><%= user.email%></div>
          </div>
        </div>
        <div class="actions">
          <a href="/edit-profile" class="btn">Edit Profile</a>
        </div>
      </div>
<%- include('./partials/footer') %>
